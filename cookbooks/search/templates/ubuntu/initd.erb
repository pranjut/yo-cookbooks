#!/bin/sh
### BEGIN INIT INFO
# Provides:          <%= @name %>
# Required-Start:    $local_fs $remote_fs $network $syslog $named
# Required-Stop:     $local_fs $remote_fs $network $syslog $named
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# X-Interactive:     true
# Short-Description: Start/stop <%= @name %> Billing Application
### END INIT INFO

# User running the Play process
USER=root

# Name of the application
APPLICATION_NAME="<%= @name %>"
# Path to the application source
APPLICATION_PATH="<%= @path %>"
 
. /lib/lsb/init-functions


start() {
    echo -n "Starting ElasticSearch service: "
    su $USER -c "sh ${APPLICATION_PATH}/elasticsearch > /dev/null &"
    
    RETVAL=$?

    if [ $RETVAL -eq 0 ]; then
        log_end_msg 0
    else
        log_end_msg 1
    fi  
}

stop() {
    if [ -f $APPLICATION_PATH/RUNNING_PID ]
    then
        echo -n "Shutting down ElasticSearch service: ${APPLICATION_PATH}/"
        su $USER -c "ulimit -n 65536"
        
    fi
    
    RETVAL=$?

    if [ $RETVAL -eq 0 ]; then
        log_end_msg 0
    else
        log_end_msg 1
    fi 
}

case "$1" in
    start)
        start
        ;;  
    stop)
        stop
        ;;
    status)
        ;;
    restart)
        stop
        if [ $RETVAL -eq 0 ]; then
            start
        fi
        ;;
    *)
        echo "Usage: $SCRIPTNAME {start|stop|status}" >&2
        exit 1
        ;;
esac

exit 0
