cd <%= @install_dir %>

dir_name="<%=@app_name%>_archives/build_$(date +'-%m-%d-%y-%H-%M')"

sudo mkdir -p $dir_name

sudo mv proversity.zip $dir_name

sudo mv proversity.tar.gz $dir_name

sudo mv proversity $dir_name

sudo rm -rf proversity

sudo wget --auth-no-challenge <%=@root_url%><%= @remote_url %>/<%=@app_name%>.zip

sudo unzip <%=@app_name%>.zip

sudo chmod u+x <%=@app_name%>/start

echo "Successfully Copied Artifacts"

output=`ps -ef | grep [p]roversity | awk '{print $2}'`
echo $output
if [ ${output:+1} ]
then
   echo "About to stop Proversity running under pid " $output
   sudo kill $output
   sleep 5

   echo "Stopped Proversity"
else
   echo "Proversity is already stopped"
fi
echo "Starting proversity..."
sudo service proversity start

started_process=`ps aux|grep [p]roversity`
echo $started_process
set -- $started_process

